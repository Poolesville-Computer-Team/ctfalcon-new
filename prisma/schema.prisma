// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id        String    @id @unique @default(cuid())
    username  String    @unique
    email     String    @unique
    password  String?
    loginType LoginType @default(email)
    createdAt DateTime  @default(now())
    token     Token[]
    profile   Profile?
}

model Token {
    accessToken            String   @id @unique
    refreshToken           String   @unique
    accessTokenCreatedAt   DateTime @default(now())
    accessTokenExpiration  Int      @default(3600)
    refreshTokenCreatedAt  DateTime @default(now())
    refreshTokenExpiration Int      @default(86400)
    user                   User     @relation(fields: [userId], references: [id])
    userId                 String   @unique
}

model Profile {
    id         String    @id @unique
    user       User      @relation(fields: [userId], references: [id])
    userId     String    @unique
    points     Int       @default(0)
    school     String?
    team       Team?     @relation(fields: [teamId], references: [id])
    teamId     String?
    ageGroup   AgeGroup?
    country    String?   @db.Char(2)
    gender     Gender?
    postalCode String?
}

model Team {
    id         String      @id @unique @default(cuid())
    name       String      @unique
    points     Int         @default(0)
    members    Profile[]
    challenges Challenge[]
    createdAt  DateTime    @default(now())
}

model Challenge {
    id             String   @id @unique @default(cuid())
    title          String
    description    String
    points         Int
    left           Int
    solvedBy       Team[]
    flag           String
    createdAt      DateTime @default(now())
    attachmentUrl  String?
    additionalInfo String?
}

enum LoginType {
    email
    github
}

enum AgeGroup {
    under18
    over18
}

enum Gender {
    male
    female
    nonBinaryGenderFluid
    notListedPreferNotToAnswer
}
